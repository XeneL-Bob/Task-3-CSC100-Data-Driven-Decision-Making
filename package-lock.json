{
  "name": "Graph-0-one",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . MyApp --platform=win32 --arch=x64 --out=dist/",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.myapp.electron",
    "productName": "Graph0One",
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/windows/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/mac/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/linux/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^latest",
    "electron-packager": "^latest",
    "electron-builder": "^latest"
  }
}
